{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "../dist"
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*"
    ]
}
